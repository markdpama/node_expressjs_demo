extends layout

block content
  .container
    .row.movie_container
      each movie in movies
        .col-xl-3.col-md-6.mb-4
          .card.border-0.shadow
            img.card-img-top(src=movie.poster, alt=movie.title)
            .card-body.text-center
              h5.card-title.mb-0=ellipsis(movie.title,50)
              .card-text.text-black-50=ellipsis(movie.plot,60)